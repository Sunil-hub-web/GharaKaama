<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerification"
    android:background="@drawable/background_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five"
            android:fontFamily="@font/roboto_bold"
            android:text="Phone Verification"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_five">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:layout_marginLeft="@dimen/twenty_five"
            android:fontFamily="@font/roboto_medium"
            android:text="Please enter your OTP below"
            android:textColor="@color/white"
            android:textSize="@dimen/edittextsize">

        </TextView>

        <RelativeLayout
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/thirty">

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:elevation="@dimen/ten"
                android:textColor="#000000"
                app:box_margin="@dimen/thirteen"
                app:height="@dimen/seventy"
                app:length="4"
                app:otp_box_background="@drawable/button_back1"
                app:otp_box_background_active="@drawable/otptextview_otp"
                app:otp_box_background_inactive="@drawable/button_back1"
                app:otp_text_size="@dimen/twenty_size"
                app:width="@dimen/seventy" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_VerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_below="@+id/text_ForgotPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/twenty_five"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg"
            android:text="Verify &amp; Proceed"
            android:backgroundTint="#FFC107"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_size"
            ></Button>


    </LinearLayout>

</RelativeLayout>