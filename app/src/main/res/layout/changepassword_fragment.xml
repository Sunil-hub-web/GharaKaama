<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five"
            android:fontFamily="@font/roboto_bold"
            android:text="Password"
            android:drawableRight="@drawable/lock_changepassword"
            android:drawablePadding="@dimen/fifteen"
            android:textColor="@color/black"
            android:textSize="@dimen/edittextsize">

        </TextView>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginTop="@dimen/ten"
            android:background="@drawable/button_back1"
            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_marginRight="@dimen/twenty_five"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"
            android:layout_marginBottom="@dimen/twenty"
            android:paddingRight="@dimen/ten"
            android:paddingLeft="@dimen/fifteen"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:imeOptions="actionDone"
            android:drawablePadding="@dimen/twenty"
            android:inputType="textPassword"
            android:textColor="#25297A"
            android:textSize="@dimen/twenty_size"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five"
            android:fontFamily="@font/roboto_bold"
            android:drawableRight="@drawable/lock_changepassword"
            android:drawablePadding="@dimen/fifteen"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="@dimen/edittextsize">

        </TextView>

        <EditText
            android:id="@+id/edit_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginTop="@dimen/ten"
            android:background="@drawable/button_back1"
            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_marginRight="@dimen/twenty_five"
            android:layout_marginBottom="@dimen/twenty"
            android:drawablePadding="@dimen/twenty"
            android:paddingLeft="@dimen/fifteen"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="#25297A"
            android:textSize="@dimen/twenty_size"
            android:textStyle="normal" />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_marginRight="@dimen/twenty_five"
            android:text="* Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
            android:textColor="#000000"
            android:textSize="13sp" />-->

        <Button
            android:id="@+id/btn_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_below="@+id/text_ForgotPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/twenty"
            android:layout_marginBottom="10dp"
            android:background="@drawable/passwordbutton_bg"
            android:fontFamily="@font/roboto_bold"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_size"></Button>

    </LinearLayout>

</RelativeLayout>