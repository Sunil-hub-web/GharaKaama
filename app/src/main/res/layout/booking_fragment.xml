                <TextView
                    android:id="@+id/OrderStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/ordstatus"
                android:layout_toLeftOf="@+id/nav_ChangePassword"
                android:layout_marginTop="@dimen/five"
                android:id="@+id/atagory">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="catagory"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/catagory"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

