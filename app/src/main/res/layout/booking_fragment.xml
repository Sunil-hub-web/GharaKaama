            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_toLeftOf="@+id/nav_ChangePassword"
                android:id="@+id/booid">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Booking Id"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/bookingId"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/five"
                android:layout_below="@+id/booid"
                android:layout_toLeftOf="@+id/nav_ChangePassword"
                android:id="@+id/ordstatus">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Order Status"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
