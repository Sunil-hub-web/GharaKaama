    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/toolbar"
        android:id="@+id/include"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/include">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_userDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginBottom="@dimen/five"
            app:cardCornerRadius="@dimen/ten"
            app:cardElevation="@dimen/five">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/profile_user"
                    android:layout_centerVertical="true"></ImageView>

                <TextView
                    android:id="@+id/nav_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_toRightOf="@id/profile"></TextView>

                <TextView
                    android:id="@+id/nav_mobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7878403663"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

