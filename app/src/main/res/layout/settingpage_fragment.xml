        <androidx.cardview.widget.CardView
            android:id="@+id/card_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginBottom="@dimen/five"
            app:cardCornerRadius="@dimen/ten"
            app:cardElevation="@dimen/five">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/password"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/lock_setting"
                    android:layout_centerVertical="true"></ImageView>

                <TextView
                    android:id="@+id/nav_Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#5F5E5E"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_toRightOf="@id/password"></TextView>

                <TextView
                    android:id="@+id/nav_ChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="#0429F4"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:drawableRight="@drawable/keyboard_arrow_right"></TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginBottom="@dimen/five"
            app:cardCornerRadius="@dimen/ten"
            app:cardElevation="@dimen/five">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/logout"
                    android:layout_centerVertical="true"></ImageView>

                <TextView
                    android:id="@+id/nav_Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_toRightOf="@id/logout"></TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_BookingHistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginBottom="@dimen/five"
            app:cardCornerRadius="@dimen/ten"
            app:cardElevation="@dimen/five">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/History"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/history"
                    android:layout_centerVertical="true"></ImageView>

                <TextView
                    android:id="@+id/nav_History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking History"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_size"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_toRightOf="@id/History"></TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>