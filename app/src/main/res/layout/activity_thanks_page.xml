<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanksPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_marginRight="@dimen/ten"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/thirty"
            android:fontFamily="@font/roboto_regular"
            android:text="Success!"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_size"></TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@id/text1"
            android:gravity="center"
            android:layout_marginTop="@dimen/fifteen"
            android:fontFamily="@font/roboto_regular"
            android:text="Your Booking has Successfully"
            android:textColor="@color/black"
            android:textSize="@dimen/edittextsize"></TextView>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/hundred_fifty"
            android:layout_height="@dimen/hundred_twenty"
            android:src="@drawable/check_1"
            android:layout_centerHorizontal="true">

        </ImageView>

    </RelativeLayout>





</RelativeLayout>